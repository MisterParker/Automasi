                    <!--                    android:textSize="25sp"-->
                    <!--                    app:rippleColor="#00FF00"-->
                    <!--                    android:backgroundTint="#FFA611"-->
                    <!--                    android:text="Geyser"/>-->


                    <FrameLayout
                        android:id="@+id/water"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        android:layout_marginRight="10dp"
                        android:layout_height="match_parent"
                        android:backgroundTint="#ffffff"
                        android:elevation="@dimen/cardview_compat_inset_shadow"
                        style="@style/Widget.MaterialComponents.Button"
                        >

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/wimage"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="@drawable/tub"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="30dp"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Water"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="20dp"
                                android:layout_below="@id/wimage"
                                />


                        </RelativeLayout>


                    </FrameLayout>


                    <!--                <com.google.android.material.button.MaterialButton-->
                    <!--                    android:id="@+id/water"-->
                    <!--                    style="@style/Widget.MaterialComponents.Button"-->
                    <!--                    android:layout_width="0dp"-->
                    <!--                    android:layout_weight="1"-->
                    <!--                    android:layout_margin="7dp"-->
                    <!--                    android:layout_height="match_parent"-->
                    <!--                    android:layout_marginLeft="10dp"-->
                    <!--                    android:textSize="25sp"-->
                    <!--                    app:rippleColor="#00FF00"-->
                    <!--                    android:backgroundTint="#FFA611"-->
                    <!--                    android:elevation="@dimen/cardview_compat_inset_shadow"-->
                    <!--                    android:text="Water"/>-->


                </LinearLayout>


            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:id="@+id/room"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        android:layout_height="match_parent"
                        android:backgroundTint="#ffffff"
                        android:elevation="@dimen/cardview_compat_inset_shadow"
                        android:layout_marginRight="10dp"
                        >

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/himage"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="@drawable/house"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="30dp"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Room"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="20dp"
                                android:layout_below="@id/himage"
                                />

                        </RelativeLayout>


                    </FrameLayout>


                    <!--                <com.google.android.material.button.MaterialButton-->
                    <!--                    android:id="@+id/room"-->
                    <!--                    style="@style/Widget.MaterialComponents.Button"-->
                    <!--                    android:layout_width="0dp"-->
                    <!--                    android:layout_weight="1"-->
                    <!--                    android:layout_margin="7dp"-->
                    <!--                    android:layout_height="match_parent"-->
                    <!--                    android:elevation="@dimen/cardview_compat_inset_shadow"-->
                    <!--                    android:backgroundTint="#FFA611"-->
                    <!--                    app:rippleColor="#00FF00"-->
                    <!--                    android:textSize="25sp"-->
                    <!--                    android:layout_marginRight="10dp"-->
                    <!--                    android:text="Room"/>-->

                    <FrameLayout
                        android:id="@+id/settings"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_marginLeft="10dp"
                        android:backgroundTint="#ffffff"
                        android:elevation="1dp"
                        >

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/simage"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="@drawable/setting"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="30dp"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Setting"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="20dp"
                                android:layout_below="@id/simage"
                                />


                        </RelativeLayout>


                    </FrameLayout>



                    <!--                <com.google.android.material.button.MaterialButton-->
                    <!--                    android:id="@+id/settings"-->
                    <!--                    style="@style/Widget.MaterialComponents.Button"-->
                    <!--                    android:layout_width="0dp"-->
                    <!--                    android:layout_weight="1"-->
                    <!--                    android:layout_height="match_parent"-->
                    <!--                    android:layout_margin="7dp"-->
                    <!--                    android:layout_marginLeft="10dp"-->
                    <!--                    android:backgroundTint="#FFA611"-->
                    <!--                    android:elevation="@dimen/cardview_compat_inset_shadow"-->
                    <!--                    android:textSize="25sp"-->
                    <!--                    app:rippleColor="#00FF00"-->
                    <!--                    android:text="Setting"/>-->


                </LinearLayout>


            </FrameLayout>




        </LinearLayout>



        <FrameLayout
            android:id="@+id/off_mode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:gravity="center"

            android:orientation="vertical"
            android:background="@drawable/off_back"

            android:visibility="gone">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/off_moon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible"
                app:lottie_autoPlay="true"
                android:layout_margin="10dp"
                app:lottie_fileName="off_mode.json"
                app:lottie_loop="true" />

        </FrameLayout>



